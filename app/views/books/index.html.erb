<h1>Books</h1>

<table>
  <thead>
   <tr>
     <th class="nill"> </th>
     <th class="nill"> Title </th>
     <th class="nill"> Body </th>


   </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td class="main"><%= image_tag book.user.get_profile_image(100,100) %></td>
     <td class="main"><%= link_to book.title, book_path(book)  %></td>
     <td class="main"><%= book.body %></td>
     
    </tr>
   <% end %>  
  </tbody>
</table>