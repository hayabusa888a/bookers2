<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
  <label for="inputBody">Opinion</label>
  <%= f.text_field :body, placeholder: "感想", id:"inputBody" %>  
  <%= f.submit "Create Book" %>
<% end %>