
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user , book: @book %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h1> Books</h1>
      <table class="table">
        <thead>
         <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
         </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
          <tr>
           <td class="main"><%= image_tag user.get_profile_image(100,100) %></td>
           <td class="main"><%= user.name  %></td>
           <td class="main"><%= link_to "Show" , user_path(user) %></td>
          </tr>
         <% end %>  
        </tbody>
      </table>
    </div>
    
  </div>
  
</div>
